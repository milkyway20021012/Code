{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "make: debug",
      "type": "shell",
      "command": "make",
      "args": ["debug"],
      "options": { "cwd": "${workspaceFolder}" },
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "make: release",
      "type": "shell",
      "command": "make",
      "args": ["release"],
      "options": { "cwd": "${workspaceFolder}" },
      "group": "build",
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "make: run",
      "type": "shell",
      "command": "make",
      "args": ["run"],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": ["$gcc"]
    }
  ]
}